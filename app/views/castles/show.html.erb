<div class="container">
  <div class="row">
    <div class= "col-6">
      <h2><%= @castle.name %></h2>
      <p><%= @castle.address %></p>
      <p><%= @castle.description %></p>
      <p><%= @castle.price %>â‚¬ / night</p>
      <% if @castle.photos.count > 0 %>
        <% @castle.photos.each do |photo| %>
          <%= cl_image_tag(photo.key, :width=>"100%") %>
        <% end %>
      <% end %>
      <% if @castle.user == current_user %>
        <%= link_to "delete", castles_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary" %>
        <%= link_to "edit", edit_castle_path(@castle), class: "btn btn-primary" %>
      <% else %>
        <%= link_to "Book this castle", new_castle_booking_path(@castle), class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-6">
    </div>
  </div>
</div>
