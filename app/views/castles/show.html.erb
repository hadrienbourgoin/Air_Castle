
<div class="row">
    <% if @castle.photos.count > 0 %>
      <div class="cards">
          <div>
            <%= cl_image_tag (@castle.photos.first.key) %>
          </div>
          <div class="cadre">
            <% @castle.photos[1..-1].each do |castle|%>
              <div class="card img-container">
                <%= cl_image_tag (castle.key) %>
              </div>
            <% end %>
          </div>
      </div>
    <% end %>
  <div class= "col-6">
      <h2><%= @castle.name %></h2>
      <p><%= @castle.price %>€ / night</p>
      <p><%= @castle.address %></p>
      <p><%= @castle.description %></p>
      <p><%= @castle.price %>€</p>
      <div class="d-flex justify-content-center gap-2">
        <% if @castle.user == current_user %>
          <%= link_to "Delete", castles_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary " %>
          <%= link_to "Edit", edit_castle_path(@castle), class: "btn btn-primary" %>
        <% else %>
          <%= link_to "Book this castle", new_castle_booking_path(@castle), class: "btn btn-primary" %>
        <% end %>
      </div>
   </div>
</div>
